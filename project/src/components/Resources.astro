<style>
	.resources {
		margin-left: 280px;
		padding: 5rem 2rem;
		background: linear-gradient(135deg, var(--bg-dark) 0%, rgba(0, 212, 255, 0.03) 100%);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 3rem;
		font-weight: 800;
		margin-bottom: 1rem;
	}

	.section-subtitle {
		font-size: 1.2rem;
		color: var(--text-secondary);
	}

	.resources-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
		margin-bottom: 5rem;
	}

	.resource-category {
		background: rgba(255, 255, 255, 0.02);
		backdrop-filter: blur(20px);
		border-radius: 16px;
		padding: 2rem;
		border: 1px solid rgba(255, 255, 255, 0.1);
		height: fit-content;
	}

	.category-header {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 2px solid rgba(0, 212, 255, 0.2);
	}

	.category-icon {
		font-size: 2.5rem;
		filter: drop-shadow(0 0 10px rgba(0, 212, 255, 0.3));
	}

	.category-title {
		font-size: 1.3rem;
		font-weight: 700;
		color: var(--text-primary);
	}

	.resource-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.resource-item {
		display: flex;
		align-items: flex-start;
		gap: 0.8rem;
		padding: 0.8rem 0;
		color: var(--text-secondary);
		line-height: 1.5;
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
		transition: all 0.3s ease;
	}

	.resource-item:hover {
		color: var(--text-primary);
		padding-left: 0.5rem;
	}

	.item-bullet {
		color: var(--primary-blue);
		font-weight: bold;
		margin-top: 0.1rem;
	}

	.cost-analysis {
		margin-bottom: 4rem;
	}

	.cost-title {
		font-size: 2.2rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 3rem;
		background: linear-gradient(45deg, var(--primary-purple), var(--primary-pink));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.cost-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		margin-bottom: 3rem;
	}

	.cost-card {
		background: rgba(255, 255, 255, 0.03);
		backdrop-filter: blur(15px);
		border-radius: 12px;
		padding: 1.5rem;
		border: 1px solid rgba(255, 255, 255, 0.1);
	}

	.cost-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 1rem;
	}

	.cost-item {
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-primary);
	}

	.priority-badge {
		padding: 0.3rem 0.8rem;
		border-radius: 6px;
		font-size: 0.8rem;
		font-weight: 600;
		text-transform: uppercase;
	}

	.priority-badge.high {
		background: rgba(239, 68, 68, 0.2);
		color: #EF4444;
		border: 1px solid rgba(239, 68, 68, 0.3);
	}

	.priority-badge.medium {
