	{ label: "Members Actively Participating", value: "85%", icon: "üë•" },
	{ label: "Project Completion Rate", value: "92%", icon: "‚úÖ" },
	{ label: "Career Placement Success", value: "78%", icon: "üíº" },
	{ label: "Industry Partnership Growth", value: "150%", icon: "ü§ù" }
