		activities: [
			"Welcome ceremony and introductions",
			"AI industry overview presentation",
			"Club structure and goals presentation",
			"Networking session with refreshments"
		],
		duration: "3 hours",
		audience: "All students"
	},
	{
		month: "Month 2",
		title: "Prompt Engineering Workshop",
		type: "Educational Workshop",
		description: "Hands-on workshop teaching advanced prompt engineering techniques",
		activities: [
			"Interactive prompt building exercises",
			"Live demonstrations with AI models",
			"Group challenges and competitions",
			"Best practices and tips sharing"
		],
