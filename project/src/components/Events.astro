		description: "Comprehensive demonstration of cutting-edge AI tools and platforms",
		activities: [
			"Live tool demonstrations",
			"Hands-on trial sessions",
			"Comparison and evaluation workshop",
			"Q&A with industry experts"
		],
		duration: "4 hours",
		audience: "Tech enthusiasts"
	},
	{
		month: "Month 4",
		title: "AI Hackathon 2025",
		type: "Competition",
		description: "24-hour hackathon focused on solving real-world problems with AI",
		activities: [
			"Team formation and project ideation",
			"Mentorship sessions with industry professionals",
			"Development and prototyping",
			"Final presentations and judging"
		],
		duration: "24 hours",
		audience: "Students + industry professionals"
	},
	{
		month: "Month 5",
		title: "Industry Speaker Series",
		type: "Guest Lecture",
		description: "Monthly series featuring leaders from top AI companies",
		activities: [
			"Keynote presentations from industry leaders",
			"Career guidance and advice sessions",
			"Networking opportunities",
			"Panel discussions on AI trends"
		],
		duration: "2 hours",
		audience: "All university community"
