];

const ongoingActivities = [
	{
		title: "Weekly Tech Talks",
		frequency: "Every Wednesday",
		description: "Casual presentations on latest AI developments and trends"
	},
	{
		title: "Study Groups",
		frequency: "Bi-weekly",
		description: "Collaborative learning sessions for complex topics"
	},
	{
		title: "Project Teams",
		frequency: "Ongoing",
		description: "Small groups working on semester-long AI projects"
	},
	{
		title: "Industry Visits",
		frequency: "Monthly",
		description: "Field trips to AI companies and research labs"
	}
];
---

<section id="events" class="events fade-in">
	<div class="container">
		<div class="section-header">
			<h2 class="section-title gradient-text">Events Plan</h2>
			<p class="section-subtitle">Engaging activities and experiences throughout the year</p>
		</div>
		
		<div class="events-timeline">
			{eventsPlan.map((event, index) => (
				<div class="event-card card-hover" style={`animation-delay: ${index * 0.1}s`}>
					<div class="event-header">
						<div class="event-month">{event.month}</div>
						<div class="event-type">{event.type}</div>
					</div>
					<div class="event-content">
						<h3 class="event-title">{event.title}</h3>
						<p class="event-description">{event.description}</p>
						
						<div class="event-details">
							<div class="activities-section">
								<h4>Activities:</h4>
								<ul class="activities-list">
									{event.activities.map((activity) => (
										<li>{activity}</li>
									))}
								</ul>
							</div>
							
							<div class="event-meta">
								<div class="meta-item">
									<span class="meta-icon">‚è±Ô∏è</span>
									<span class="meta-label">Duration: {event.duration}</span>
								</div>
								<div class="meta-item">
									<span class="meta-icon">üë•</span>
									<span class="meta-label">Audience: {event.audience}</span>
								</div>
							</div>
						</div>
					</div>
					<div class="event-glow"></div>
				</div>
			))}
		</div>
		
		<div class="ongoing-activities">
			<h3 class="ongoing-title">Ongoing Activities</h3>
			<div class="activities-grid">
				{ongoingActivities.map((activity) => (
					<div class="activity-card card-hover">
						<div class="activity-header">
							<h4 class="activity-title">{activity.title}</h4>
							<div class="activity-frequency">{activity.frequency}</div>
						</div>
						<p class="activity-description">{activity.description}</p>
						<div class="activity-indicator">
							<div class="indicator-dot"></div>
							<span class="indicator-text">Active</span>
						</div>
					</div>
				))}
			</div>
		</div>
		
		<div class="event-calendar">
			<h3 class="calendar-title">Quick Calendar View</h3>
			<div class="calendar-grid">
				<div class="calendar-month">
					<h4>Jan 2025</h4>
					<div class="event-marker launch">Launch Event</div>
				</div>
				<div class="calendar-month">
					<h4>Feb 2025</h4>
					<div class="event-marker workshop">Workshop</div>
				</div>
				<div class="calendar-month">
					<h4>Mar 2025</h4>
					<div class="event-marker demo">Tech Demo</div>
				</div>
				<div class="calendar-month">
					<h4>Apr 2025</h4>
					<div class="event-marker hackathon">Hackathon</div>
				</div>
				<div class="calendar-month">
					<h4>May 2025</h4>
					<div class="event-marker speaker">Speaker Series</div>
				</div>
				<div class="calendar-month">
					<h4>Jun 2025</h4>
					<div class="event-marker showcase">Showcase</div>
				</div>
			</div>
		</div>
		
		<div class="event-registration">
			<div class="registration-content">
				<h3 class="registration-title">Ready to Join Our Events?</h3>
				<p class="registration-description">
					Be part of an exciting journey in AI innovation. Our events are designed to inspire, 
					educate, and connect you with the future of technology.
				</p>
				<div class="registration-actions">
					<a href="#home" class="glow-button">Join AI Club</a>
					<div class="contact-info">
						<span>üìß aiclub@university.edu</span>
						<span>üì± +1 (555) 123-4567</span>
