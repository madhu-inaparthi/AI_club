	{
		month: "Month 6",
		title: "Project Showcase & Graduation",
		type: "Showcase Event",
		description: "Final presentation of member projects and club achievements",
		activities: [
			"Project presentations by members",
			"Awards ceremony and recognition",
			"Alumni network introduction",
			"Celebration dinner and networking"
		],
		duration: "4 hours",
		audience: "Members, faculty, industry partners"
